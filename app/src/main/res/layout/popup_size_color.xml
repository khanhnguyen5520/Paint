<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_layout"
    android:orientation="vertical"
    android:padding="15dp">

    <com.lutech.paintV3.model.StrokeWidthView
        android:id="@+id/M_view"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <SeekBar
        android:id="@+id/seekbarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="@color/black" />

            <ImageView
                android:id="@+id/btnBlackCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnRed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="#F3F60000" />

            <ImageView
                android:id="@+id/btnRedCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnOrange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="@color/orange" />

            <ImageView
                android:id="@+id/btnOrangeCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnYellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="@color/yellow" />

            <ImageView
                android:id="@+id/btnYellowCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnGreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="@color/green" />

            <ImageView
                android:id="@+id/btnGreenCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btnBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_background"
                android:backgroundTint="@color/blue" />

            <ImageView
                android:id="@+id/btnBlueCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle"
                android:visibility="gone" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btnColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/bgcolor" />

    </LinearLayout>
</LinearLayout>
